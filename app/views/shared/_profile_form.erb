<%= simple_form_for @profile do |f| %>
  <%= f.label "Рост" %>
  <%= f.input :height, label: false %>
  <%= f.label "Вес" %>
  <%= f.input :weight, label: false %>
  <%= f.label "Возраст" %>
  <%= f.input :age, label: false %>
  <%= f.label "Ваш пол" %>
  <%= f.input :sex, :collection => {"Man" => 1 ,"Woman" => 2 }, label: false %>
  <%= f.input :activity, :collection => {"Сидячий образ жизни без нагрузок" => 1, "Тренировки  1-3 раза в неделю" => 2, "Занятия 3-5 дней в неделю" => 3, "Интенсивные тренировки 6-7 раз в неделю" => 4, "Спортсмен, выполняющий упражнения чаще, чем раз в день" => 5}, :label => "Активность" %>
  <%= f.label "Страна проживания" %>
  <%= f.country_select :region %>
  <%= f.submit 'Save' %>
<% end %>
